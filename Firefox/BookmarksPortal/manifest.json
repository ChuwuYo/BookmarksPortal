{
  "manifest_version": 3,
  "name": "书签传送门 - Firefox",
  "description": "书签导出工具，支持JSON格式导出",
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@example.com",
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "bookmarks"
  ],

  "host_permissions": [
    "https://logo.clearbit.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "default-src 'self'"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
